<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="35dp"
    app:layout_constraintLeft_toLeftOf="@+id/ivPet"
    android:layout_marginTop="3dp"
    app:layout_constraintRight_toRightOf="@+id/ivPet"
    app:layout_constraintTop_toTopOf="@+id/eyeGide">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/eyesMotionLayout"
        android:layout_width="90dp"
        android:layout_height="35dp"
        app:layoutDescription="@xml/eyes_motion_scene">


        <View
            android:id="@+id/right_whit_eye"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/pet_white_eye"
            app:layout_constraintLeft_toRightOf="@+id/vCenter"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/right_black_eye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pet_black_eye"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/right_whit_eye"
            app:layout_constraintEnd_toEndOf="@+id/right_whit_eye"
            app:layout_constraintStart_toStartOf="@+id/right_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/right_whit_eye">


            <View
                android:id="@+id/vBigRightReflect"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_white_circle" />

            <View
                android:id="@+id/vSmallRightReflect"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_below="@+id/vBigRightReflect"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_white_circle" />

        </RelativeLayout>


        <View
            android:id="@+id/left_whit_eye"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/pet_white_eye"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintRight_toLeftOf="@+id/vCenter"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/left_black_eye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pet_black_eye"
            app:layout_constraintBottom_toBottomOf="@+id/left_whit_eye"
            app:layout_constraintEnd_toEndOf="@+id/left_whit_eye"
            app:layout_constraintStart_toStartOf="@+id/left_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/left_whit_eye">


            <View
                android:id="@+id/vBigLeftReflect"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_white_circle" />

            <View
                android:id="@+id/vSmallLeftReflect"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_below="@+id/vBigLeftReflect"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_white_circle" />

        </RelativeLayout>

        <View
            android:id="@+id/vTopRightEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@+id/right_whit_eye"
            app:layout_constraintLeft_toLeftOf="@+id/right_whit_eye"
            app:layout_constraintRight_toRightOf="@+id/right_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/right_whit_eye" />

        <View
            android:id="@+id/vBottomRightEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/right_whit_eye"
            app:layout_constraintLeft_toLeftOf="@+id/right_whit_eye"
            app:layout_constraintRight_toRightOf="@+id/right_whit_eye"
            app:layout_constraintTop_toBottomOf="@+id/right_whit_eye" />

        <View
            android:id="@+id/vRightRightEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/right_whit_eye"
            app:layout_constraintLeft_toRightOf="@+id/right_whit_eye"
            app:layout_constraintRight_toRightOf="@+id/right_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/right_whit_eye" />

        <View
            android:id="@+id/vLeftRightEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/right_whit_eye"
            app:layout_constraintLeft_toLeftOf="@+id/right_whit_eye"
            app:layout_constraintRight_toLeftOf="@+id/right_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/right_whit_eye" />

        <View
            android:id="@+id/vCenter"
            android:layout_width="20dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vTopLeftEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@+id/left_whit_eye"
            app:layout_constraintLeft_toLeftOf="@+id/left_whit_eye"
            app:layout_constraintRight_toRightOf="@+id/left_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/left_whit_eye" />

        <View
            android:id="@+id/vBottomLeftEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/left_whit_eye"
            app:layout_constraintLeft_toLeftOf="@+id/left_whit_eye"
            app:layout_constraintRight_toRightOf="@+id/left_whit_eye"
            app:layout_constraintTop_toBottomOf="@+id/left_whit_eye" />

        <View
            android:id="@+id/vRightLeftEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/left_whit_eye"
            app:layout_constraintLeft_toRightOf="@+id/left_whit_eye"
            app:layout_constraintRight_toRightOf="@+id/left_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/left_whit_eye" />

        <View
            android:id="@+id/vLeftLeftEye"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/left_whit_eye"
            app:layout_constraintLeft_toLeftOf="@+id/left_whit_eye"
            app:layout_constraintRight_toLeftOf="@+id/left_whit_eye"
            app:layout_constraintTop_toTopOf="@+id/left_whit_eye" />


    </androidx.constraintlayout.motion.widget.MotionLayout>


</FrameLayout>